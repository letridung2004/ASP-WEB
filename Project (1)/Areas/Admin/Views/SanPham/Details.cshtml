@model Project1.Models.SanPham

<div class="container">
    <h3>Thông tin chi tiết</h3>

    <form method="post" asp-action="Details">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name">Tên sản phẩm</label>
            <input asp-for="Name" type="text" class="form-control" readonly style="pointer-events:none;" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Mô tả</label>
            <input asp-for="Description" type="text" class="form-control" readonly style="pointer-events:none;" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Giá tiền</label>
            <p>@String.Format("{0:N0}", Model.price)</p> <!-- Hiển thị giá đã định dạng -->
        </div>

        <div class="form-group">
            <label>Hình ảnh</label>
            <img src="@Model.ImageUrl" alt="Hình sản phẩm" class="img-thumbnail" />
        </div>

        <div class="form-group">
            <label asp-for="TheLoai.Name">Tên thể loại</label>
            <input asp-for="TheLoai.Name" type="text" class="form-control" readonly style="pointer-events:none;" />
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
